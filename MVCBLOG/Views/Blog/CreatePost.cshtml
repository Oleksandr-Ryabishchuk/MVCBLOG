@model MVCBLOG.ViewModels.PostFormViewModel

@{
    ViewBag.Title = "CreatePost";
}

<h2>Create Post</h2>

@using (Html.BeginForm("CreatePost", "Blog"))
{
    <p class="alert alert-info">All fields are <strong>required</strong>.</p>
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", autofocus = "auto" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Body)<br />
        @Html.TextBoxFor(m => m.Body, new { @class = "dialog-content" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CreatedOn)
        @Html.TextBoxFor(m => m.CreatedOn, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Theme)
        @Html.DropDownListFor(m => m.Theme, new SelectList(Model.Themes, "Id", "Name"), "Select Theme", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Theme)
    </div>
    <br />
    <button type="submit" class="btm btn-primary btn-lg">Save</button>


}

